#!/bin/bash
set -euo pipefail
README="README.md"
TMPFILE="structure.tmp"
TMPDIR="tmp"
COMPOSE="docker-compose.yml"
DEPLOY_DIR="deploy"
CHARTS_DIR="$DEPLOY_DIR/charts"
MANIFESTS_DIR="$DEPLOY_DIR/manifests"
TERRAFORM_DIR="$DEPLOY_DIR/terraform"
START="<!-- START_STRUCTURE -->"
END="<!-- END_STRUCTURE -->"
SETTINGS_FILE=$(ls | grep -E "settings.gradle(\.kts)?$" || true)
if [ -z "$SETTINGS_FILE" ]; then
  echo "‚ùå settings.gradle(.kts) NOT FOUND"
  exit 1
fi
ROOT_NAME=$(grep -E "^rootProject.name" "$SETTINGS_FILE" | sed "s/.*['\"]\\(.*\\)['\"].*/\\1/")
ROOT_NAME=${ROOT_NAME:-root}
echo "üóÇÔ∏è ${ROOT_NAME}" > "$TMPFILE"
echo >> "$TMPFILE"
mkdir -p "$TMPDIR"
awk '
  /^[[:space:]]*include[[:space:]]*\(/ {
    match($0, /\(.*\)/)
    args = substr($0, RSTART+1, RLENGTH-2)
    gsub(/'\''|"/, "", args)
    gsub(/,/, " ", args)
    print args
  }
' "$SETTINGS_FILE" | tr '\n' ' ' > "$TMPDIR/modules_raw.txt"
if [ ! -s "$TMPDIR/modules_raw.txt" ]; then
  echo "‚ö†Ô∏è No modules found in $SETTINGS_FILE"
  exit 0
fi
read -r -a MODULES <<< "$(cat "$TMPDIR/modules_raw.txt")"
declare -A seen_top
top_levels=()
for m in "${MODULES[@]}"; do
  top="${m%%:*}"
  if [ -z "${seen_top[$top]:-}" ]; then
    seen_top[$top]=1
    top_levels+=("$top")
  fi
done
for top in "${top_levels[@]}"; do
  echo "‚îú‚îÄ‚îÄ‚îÄ‚îÄ üìÅ ${top} <a href=\"./${top}\">‚ÜóÔ∏è</a>" >> "$TMPFILE"
  children=()
  for m in "${MODULES[@]}"; do
    if [[ "$m" == "$top"*:* ]]; then
      child="${m##*:}"
      children+=("$child|${m}")
    fi
  done
  count=${#children[@]}
  if (( count > 0 )); then
    for ((i=0; i<count; i++)); do
      pair="${children[$i]}"
      child="${pair%%|*}"
      fullpath="${pair#*|}"
      is_last=$(( i == count - 1 ))
      branch=$([ $is_last -eq 1 ] && echo "‚îî‚îÄ‚îÄ‚îÄ‚îÄ" || echo "‚îú‚îÄ‚îÄ‚îÄ‚îÄ")
      echo "‚îÇ     ${branch} üìÑ ${child} <a href=\"./${fullpath}\">‚ÜóÔ∏è</a>" >> "$TMPFILE"
    done
  fi
  echo "‚îÇ" >> "$TMPFILE"
  echo >> "$TMPFILE"
done
CONTENT=$(cat "$TMPFILE")
if [ ! -f "$README" ]; then
  echo "# Project Overview" > "$README"
fi
if grep -q "$START" "$README" && grep -q "$END" "$README"; then
  awk -v s="$START" -v e="$END" -v r="$CONTENT" '
    $0~s {print; print r; skip=1; next}
    $0~e {skip=0}
    !skip
  ' "$README" > README.tmp && mv README.tmp "$README"
else
  echo -e "\n$START\n$CONTENT\n$END" >> "$README"
fi
echo "‚úÖ README structure updated."
LEVEL2_MODULES=()
for m in "${MODULES[@]}"; do
  colons=$(grep -o ":" <<< "$m" | wc -l || true)
  if [ "$colons" -eq 1 ]; then
    LEVEL2_MODULES+=("$m")
  fi
done
if [ "${#LEVEL2_MODULES[@]}" -eq 0 ]; then
  echo "‚ö†Ô∏è  No level-2 modules found ‚Äî skipping generation."
  exit 0
fi
echo "üéØ Found ${#LEVEL2_MODULES[@]} deployable services."
mkdir -p "$CHARTS_DIR"
echo "üßπ [cleanup] Removing stale Helm charts..."
find "$CHARTS_DIR" -mindepth 1 -type d -name "templates" -prune | while read -r chart_path; do
  rel_path="${chart_path#$CHARTS_DIR/}"
  rel_path="${rel_path%/templates}"
  module="${rel_path//\//:}"
  if [[ ! " ${LEVEL2_MODULES[*]} " =~ " ${module} " ]]; then
    echo "   üóëÔ∏è  Removing: ${CHARTS_DIR}/${rel_path}"
    rm -rf "${CHARTS_DIR:?}/${rel_path}"
  fi
done
echo "üöÄ [generate] Creating Helm charts..."
for m in "${LEVEL2_MODULES[@]}"; do
  dirpath="${m//:/\/}"
  chart_dir="${CHARTS_DIR}/${dirpath}"
  name="${m##*:}"
  mkdir -p "${chart_dir}/templates"
  cat <<EOF > "${chart_dir}/Chart.yml"
apiVersion: v2
name: ${name}
description: Helm chart for ${m}
type: application
version: 0.1.0
appVersion: "latest"
EOF
  cat <<EOF > "${chart_dir}/values.yml"
replicaCount: 1
image:
  repository: docker.io/\${{ vars.DOCKERHUB_REPO }}/${dirpath}
  tag: "latest"
  pullPolicy: IfNotPresent
service:
  type: ClusterIP
  port: 8080
resources: {}
EOF
  cat <<EOF > "${chart_dir}/templates/deployment.yml"
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ .Chart.Name }}
spec:
  replicas: {{ .Values.replicaCount }}
  selector:
    matchLabels:
      app: {{ .Chart.Name }}
  template:
    metadata:
      labels:
        app: {{ .Chart.Name }}
    spec:
      containers:
        - name: {{ .Chart.Name }}
          image: "{{ .Values.image.repository }}:{{ .Values.image.tag }}"
          ports:
            - containerPort: {{ .Values.service.port }}
EOF
  cat <<EOF > "${chart_dir}/templates/service.yml"
apiVersion: v1
kind: Service
metadata:
  name: {{ .Chart.Name }}
spec:
  type: {{ .Values.service.type }}
  selector:
    app: {{ .Chart.Name }}
  ports:
    - port: {{ .Values.service.port }}
      targetPort: {{ .Values.service.port }}
EOF
done
echo "‚úÖ Helm charts ready."
mkdir -p "$MANIFESTS_DIR"
echo "üöÄ [generate] Creating K8s manifests..."
for m in "${LEVEL2_MODULES[@]}"; do
  dirpath="${m//:/\/}"
  target="${MANIFESTS_DIR}/${dirpath}"
  mkdir -p "$target"
  name="${m##*:}"
  cat <<EOF > "${target}/deployment.yml"
apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${name}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ${name}
  template:
    metadata:
      labels:
        app: ${name}
    spec:
      containers:
        - name: ${name}
          image: docker.io/\${{ vars.DOCKERHUB_REPO }}/${dirpath}:latest
          ports:
            - containerPort: 8080
EOF
  cat <<EOF > "${target}/service.yml"
apiVersion: v1
kind: Service
metadata:
  name: ${name}
spec:
  type: ClusterIP
  selector:
    app: ${name}
  ports:
    - port: 8080
      targetPort: 8080
EOF
done
echo "‚úÖ K8s manifests ready."
echo "üöÄ [generate] Creating Docker Compose..."
{
  echo "version: '3.8'"
  echo "services:"
  for m in "${LEVEL2_MODULES[@]}"; do
    dirpath="${m//:/\/}"
    name="${m##*:}"
    echo "  ${name}:"
    echo "    image: docker.io/\${DOCKERHUB_REPO}/${dirpath}:latest"
    echo "    ports:"
    echo "      - \"8080:8080\""
  done
} > "$COMPOSE"
echo "‚úÖ Docker Compose ready."
mkdir -p "$TERRAFORM_DIR"
echo "üöÄ [generate] Creating Terraform skeleton..."
for m in "${LEVEL2_MODULES[@]}"; do
  dirpath="${m//:/\/}"
  tf_dir="${TERRAFORM_DIR}/${dirpath}"
  mkdir -p "$tf_dir"
  name="${m##*:}"
  cat <<EOF > "${tf_dir}/main.tf"
resource "kubernetes_deployment" "${name}" {
  metadata {
    name = "${name}"
  }
  spec {
    replicas = 1
  }
}
EOF
done
echo "‚úÖ Terraform skeleton ready."
echo "üéâ All done! (README + Helm + Manifests + Compose + Terraform updated)"
